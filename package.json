{
  "name": "halo-automation-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install || true",
    "build": "tsc -p .",
    "test:wdio": "wdio run wdio.conf.ts && node scripts/generate-wdio-report.js",
    "test:wdio:headless": "WDIO_HEADLESS=1 wdio run wdio.conf.ts && node scripts/generate-wdio-report.js",
    "test:vitest": "vitest run && node scripts/generate-vitest-report.js",
    "test": "npm run test:vitest && npm run test:wdio:headless",
    "test:report": "npm run test && npm run report:open",
    "report:open": "open report/index.html || xdg-open report/index.html || start report/index.html"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@wdio/cli": "^9.0.8",
    "@wdio/cucumber-framework": "^9.0.8",
    "@wdio/local-runner": "^9.0.8",
    "@wdio/spec-reporter": "^9.0.8",
    "@wdio/types": "^9.0.8",
    "chromedriver": "^129.0.0",
    "@cucumber/cucumber": "^10.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "happy-dom": "^15.10.3",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3",
    "webdriverio": "^9.0.8"
  }
}


